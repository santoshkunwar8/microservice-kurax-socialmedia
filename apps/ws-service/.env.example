# ============================================
# WebSocket Service Environment Variables
# ============================================

# Server Configuration
NODE_ENV=development
WS_PORT=3002
WS_HOST=0.0.0.0

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# JWT Configuration (same secret as API service)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Database Configuration (for direct queries if needed)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/kuraxx_chat?schema=public"

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30000
WS_HEARTBEAT_TIMEOUT=10000

# Logging
LOG_LEVEL=debug
