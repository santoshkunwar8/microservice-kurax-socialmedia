# ============================================
# KuraXX Chat Application - Environment Variables
# ============================================
# Copy this file to .env and fill in the values

# ============= Common =============
NODE_ENV=development

# ============= API Service =============
PORT=3001
API_BASE_URL=http://localhost:3001

# ============= WebSocket Service =============
WS_PORT=3002
WS_HOST=0.0.0.0

# ============= Database (PostgreSQL) =============
# Local development
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/kuraxx_chat?schema=public"

# Docker development (uncomment when using docker-compose)
# DATABASE_URL="postgresql://postgres:postgres@postgres:5432/kuraxx_chat?schema=public"

# ============= Redis =============
# Local development
REDIS_URL=redis://localhost:6379

# Docker development (uncomment when using docker-compose)
# REDIS_URL=redis://redis:6379

# ============= JWT Configuration =============
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ============= Firebase Configuration =============
# Get these from Firebase Console
# https://firebase.google.com/docs/admin/setup
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="your-private-key-from-service-account"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# ============= File Upload Configuration =============
# Maximum file upload size in MB
MAX_FILE_SIZE_MB=50

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,zip

# ============= CORS Configuration =============
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost

# ============= Rate Limiting =============
# Requests per 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ============= Application Settings =============
# Enable/disable features
ENABLE_REGISTRATION=true
ENABLE_FILE_UPLOAD=true

# Message retention (days)
MESSAGE_RETENTION_DAYS=90

# Typing indicator timeout (seconds)
TYPING_INDICATOR_TIMEOUT=3

# Maximum message length (characters)
MAX_MESSAGE_LENGTH=5000

# Room name length limits
MIN_ROOM_NAME_LENGTH=1
MAX_ROOM_NAME_LENGTH=100# ============= Firebase Configuration =============
# Option 1: Use service account file
# FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Option 2: Use environment variables
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_STORAGE_BUCKET=your-firebase-project-id.appspot.com
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# ============= CORS Configuration =============
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ============= Rate Limiting =============
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============= WebSocket Settings =============
WS_HEARTBEAT_INTERVAL=30000
WS_HEARTBEAT_TIMEOUT=10000

# ============= Logging =============
LOG_LEVEL=debug
